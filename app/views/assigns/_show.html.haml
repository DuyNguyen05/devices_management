.card
  .card-body
    .table-responsive
      %table#devices.table.table-striped.table-bordered.table-hover{:style => "text-align: center"}
        %thead
          %tr
            %th
              = t(".start")
            %th
              = t(".end_at")
            %th
              = t(".by")
            %th
        %tbody#assign
          - @device.assigns.each do |assign|
            %tr
              %td
                = l(assign.created_at, format: :date_month_year_concise)
              %td
                - if assign.end_at.present?
                  = l(assign.end_at, format: :date_month_year_concise)
              %td
                = assign.user.name
              %td
                = link_to t(".edit"), edit_assign_path(assign), class: "btn btn-info btn-sm", remote: true
#ModalAssignEdit
