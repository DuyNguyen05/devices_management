#myModalBuyRequest.modal.fade.bd-example-modal-lg{"aria-hidden" => "true", "aria-labelledby" => "myLargeModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        %h5
          %b
            = t(".add_new_buy_request")
        %h4
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
      .modal-body
        = form_for buy_request, remote: true do |f|
          = render "shared/error_messages", object: f.object
          .form-group
            = f.label :device_name
            = f.text_field :device_name, class: "form-control"
          .form-group
            = f.label :reason
            = f.text_field  :reason, class: "form-control"
          = f.submit t(".submit"), class: "btn btn-primary"
